<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <Button
        android:id="@+id/load_patch_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:onClick="loadPatch"
        android:text="加载patch包"
        android:textColor="@android:color/black"
        android:textSize="23sp"/>

    <Button
        android:id="@+id/kill_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/load_patch_view"
        android:gravity="center"
        android:onClick="killProcess"
        android:text="杀掉进程"
        android:textColor="@android:color/black"
        android:textSize="23sp"/>

    <Button
        android:id="@+id/clean_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/kill_view"
        android:gravity="center"
        android:onClick="cleanPatch"
        android:text="清除Patch包"
        android:textColor="@android:color/black"
        android:textSize="23sp"/>

    <Button
        android:id="@+id/test_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/clean_view"
        android:gravity="center"
        android:text="测试按钮"
        android:textColor="@android:color/black"
        android:textSize="23sp"/>
</RelativeLayout>
